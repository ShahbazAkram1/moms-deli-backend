<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Customize log format using patterns -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set the log level for the specified package to DEBUG -->
    <logger name="com.momsdeli.online.config" level="DEBUG" />

    <!-- Set the root logging level -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
